{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "outDir": "./lib",
    "moduleResolution": "Node",
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["jest", "node"]
  },
  "exclude": ["node_modules"]
}
